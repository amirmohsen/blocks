{
  "name": "composed-components",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "url": "https://github.com/composed-components/composed-components"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint": "yarn npm-run-all --continue-on-error pretty lint:*",
    "lint:js": "eslint --ext .js,.ts,.tsx --fix packages/ scripts/",
    "lint:css": "stylelint --allow-empty-input --fix \"packages/**/*.{ts,tsx}\"",
    "lint:types": "tsc --noEmit --skipLibCheck",
    "pretty": "prettier --write \"{packages,scripts}/**/*.{ts,tsx}\"",
    "dev": "cross-env TS_NODE_PROJECT=\"./scripts/webpack/tsconfig-for-webpack-config.json\" webpack-dev-server --config scripts/webpack/config.dev.ts --open",
    "rm:lib": "lerna run --parallel rm:lib",
    "test": "lerna run --parallel test",
    "build": "lerna run --parallel build",
    "packages:version": "lerna version --yes --conventional-commits --create-release github",
    "packages:postversion": "lerna run --parallel postver",
    "packages:publish": "lerna publish from-package --yes"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.6.0",
    "@types/html-webpack-plugin": "^3.2.1",
    "@types/node": "^12.7.7",
    "@types/webpack": "^4.39.1",
    "@types/webpack-dev-server": "^3.1.7",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.6",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^6.0.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "html-webpack-plugin": "^3.2.0",
    "lerna": "^3.16.4",
    "npm-run-all": "^4.1.5",
    "prettier": "1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "styled-components": "^4.4.0",
    "stylelint": "^11.0.0",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-prettier": "^1.1.1",
    "stylelint-processor-styled-components": "^1.8.0",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.6.3",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.1"
  },
  "dependencies": {
    "@types/react": "^16.9.3",
    "@types/react-dom": "^16.9.0"
  }
}
