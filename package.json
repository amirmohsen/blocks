{
  "name": "composed-components",
  "private": true,
  "workspaces": [
    "packages/base/utils/*",
    "packages/base/*",
    "packages/*"
  ],
  "repository": {
    "url": "https://github.com/composed-components/composed-components"
  },
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap",
    "bootstrap:ci": "yarn --frozen-lockfile && lerna bootstrap --frozen-lockfile",
    "lint": "yarn npm-run-all --continue-on-error lint:* lint:types",
    "lint-fix": "yarn npm-run-all --continue-on-error lint-fix:* lint:types",
    "lint:js": "eslint --ext .js,.ts,.tsx packages/ scripts/",
    "lint-fix:js": "yarn lint:js --fix",
    "lint:css": "stylelint --allow-empty-input \"packages/**/*.{ts,tsx}\"",
    "lint-fix:css": "yarn lint:css --fix",
    "lint:types": "tsc --noEmit --skipLibCheck",
    "pretty": "prettier --write .",
    "dev": "cross-env TS_NODE_PROJECT=\"./scripts/webpack/tsconfig-for-webpack-config.json\" webpack-dev-server --config scripts/webpack/config.dev.ts --open",
    "rm:lib": "lerna run --parallel rm:lib",
    "test": "lerna run --parallel test",
    "build": "lerna run --parallel build",
    "packages:version": "lerna version --yes --conventional-commits --create-release github",
    "packages:postversion": "lerna run --parallel postver",
    "packages:publish": "lerna publish from-package --yes"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@stylelint/postcss-css-in-js": "^0.37.2",
    "@types/html-webpack-plugin": "^3.2.6",
    "@types/node": "^17.0.10",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "babel-loader": "^8.2.3",
    "babel-plugin-styled-components": "^2.0.2",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "html-webpack-plugin": "^5.5.0",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-syntax": "^0.36.2",
    "prettier": "2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.3",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-prettier": "^2.0.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3"
  },
  "dependencies": {
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11"
  }
}
