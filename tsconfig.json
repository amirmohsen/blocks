{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "jsx": "react",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "types": ["cypress"],
    "declaration": true,
    "sourceMap": true
  },
  "include": ["scripts", "packages"],
  "exclude": ["node_modules"]
}
